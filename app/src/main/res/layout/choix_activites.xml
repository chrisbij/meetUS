<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.meetus.ChoixActivite" >

    <ImageButton
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:id="@+id/imageButton"
        android:minHeight="108dp"
        android:minWidth="108dp"
        android:layout_below="@+id/imageButton2"
        android:layout_marginTop="2dp"
        android:layout_alignLeft="@+id/imageButton4"
        android:layout_alignStart="@+id/imageButton4"
        android:src="@drawable/train" />

    <ImageButton
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:id="@+id/imageButton2"
        android:minHeight="108dp"
        android:minWidth="108dp"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_marginLeft="5dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/internetbags"
        android:layout_marginRight="5dp" />

    <ImageButton
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:id="@+id/imageButton3"
        android:minHeight="108dp"
        android:minWidth="108dp"
        android:src="@drawable/school"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_toRightOf="@+id/imageButton2"
        android:layout_toEndOf="@+id/imageButton2" />

    <ImageButton
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:id="@+id/imageButton4"
        android:minHeight="108dp"
        android:minWidth="108dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imageButton2"
        android:layout_toStartOf="@+id/imageButton2"
        android:layout_marginTop="152dp"
        android:src="@drawable/cargrey" />

    <ImageButton
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:id="@+id/imageButton5"
        android:layout_alignTop="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/foodgrey" />

    <ImageButton
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:id="@+id/imageButton6"
        android:layout_alignBottom="@+id/imageButton5"
        android:layout_toRightOf="@+id/imageButton5"
        android:layout_toEndOf="@+id/imageButton5" />

</RelativeLayout>
